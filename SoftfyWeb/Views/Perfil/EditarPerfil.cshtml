@{
    ViewData["Title"] = "Editar Perfil";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditarPerfil" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    @if (ViewBag.TipoUsuario == "Artista")
    {
        <div class="mb-3">
            <label for="NombreArtistico" class="form-label">Nombre Artístico</label>
            <input type="text" class="form-control" id="NombreArtistico" name="NombreArtistico" value="@ViewBag.NombreArtistico" />
        </div>

        <div class="mb-3">
            <label for="Biografia" class="form-label">Biografía</label>
            <textarea class="form-control" id="Biografia" name="Biografia" rows="4">@ViewBag.Biografia</textarea>
        </div>

        <div class="mb-3">
            <label for="FotoUrl" class="form-label">Foto de Perfil</label>
            <input type="file" class="form-control" id="FotoUrl" name="FotoUrl" />
            @if (!string.IsNullOrEmpty(ViewBag.FotoUrl))
            {
                <div class="mt-3">
                    <img src="@ViewBag.FotoUrl" alt="Foto de perfil" width="150" />
                </div>
            }
        </div>
    }
    else if (ViewBag.TipoUsuario == "Oyente" || ViewBag.TipoUsuario == "Admin")
    {
        <div class="mb-3">
            <label for="Nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@ViewBag.Nombre" />
        </div>

        <div class="mb-3">
            <label for="Apellido" class="form-label">Apellido</label>
            <input type="text" class="form-control" id="Apellido" name="Apellido" value="@ViewBag.Apellido" />
        </div>

        <div class="mb-3">
            <label for="Suscripcion" class="form-label">Suscripción</label>
            <select class="form-control" id="Suscripcion" name="Suscripcion">
                <option value="null">No Suscrito</option>
            </select>
        </div>
    }

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<a href="@Url.Action("VerPerfil")" class="btn btn-secondary mt-3">Volver al perfil</a>
