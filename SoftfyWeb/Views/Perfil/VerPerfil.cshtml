@{
    ViewData["Title"] = "Perfil";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.TipoUsuario == "Artista")
{
    <div class="profile-container">
        <h3>@ViewBag.NombreArtistico</h3>

        <div class="profile-image">
            <img src="@ViewBag.FotoUrl" alt="Foto de perfil" width="150" />
        </div>

        <div class="profile-info">
            <p><strong>Biografía:</strong></p>
            <p>@ViewBag.Biografia</p>
        </div>

        <a href="@Url.Action("EditarPerfil")" class="btn btn-primary">Editar Perfil</a>
    </div>
}
else if (ViewBag.TipoUsuario == "Oyente" || ViewBag.TipoUsuario == "Admin")
{
    <div class="profile-container">
        <h3>@ViewBag.Nombre @ViewBag.Apellido</h3>

        <div class="profile-info">
            <p><strong>Tipo de Usuario:</strong> @ViewBag.TipoUsuario</p>
            <p><strong>Suscripción:</strong> @ViewBag.Suscripcion</p>
        </div>

        <a href="@Url.Action("EditarPerfil")" class="btn btn-primary">Editar Perfil</a>
    </div>
}
else
{
    <p>No se pudo cargar el perfil.</p>
}
